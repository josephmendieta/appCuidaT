{
  "expo": {
    "name": "CuidaT",
    "slug": "CuidaT",
    "version": "1.0.0",
    "scheme": "cuidat",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,

      "package": "com.josephmendieta.cuidat",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "cuidat",
              "host": "auth"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },

    "web": {
      "favicon": "./assets/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-web-browser"
    ]
  }
}
